{
  "name": "Letterboxd-Backdrop",
  "description": "Browser extension that adds a custom backdrop image to your Letterboxd profile without paying for Patron. ",
  "version": "1",
  "author": "Lukas Wigger",
  "homepage_url": "https://github.com/LukasW01/Letterboxd-Backdrop.git",
  "manifest_version": 3,
  "action": {
    "default_title": "Letterboxd-Backdrop",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/*"],
      "js": ["js/letterboxd.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/letterboxd.js"],
      "matches": ["https://letterboxd.com/*"]
    }
  ],
  "icons": {
    "500": "img/letterboxd.png"
  },
  "permissions": [
    "storage"
  ]
}