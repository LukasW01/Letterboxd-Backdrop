    "yup": "^1.7.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.9.0",
    "@eslint/create-config": "1.11.0",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.5",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.54.0",
    "globals": "^17.3.0",
    "esbuild": "^0.27.3",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.6",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.56.0",
    "web-ext": "^9.3.0"
  }
