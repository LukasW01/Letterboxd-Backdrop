{
  "name": "letterboxd-backdrop",
  "version": "1.4",
  "scripts": {
    "build:esbuild": "node esbuild.config.mjs",
    "build:tailwind": "tailwindcss build -i src/css/tail-wind.css -o src/css/tailwind.css",
    "build:all": "tailwindcss build -i src/css/tail-wind.css -o src/css/tailwind.css && node esbuild.config.mjs && web-ext build --source-dir=dist --overwrite-dest",
    "lint": "eslint src/**/*.ts*",
    "test:ci": "pnpx jest --ci --testResultsProcessor='jest-junit'"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__test__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "axios": "^1.8.2",
    "globals": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "webextension-polyfill": "^0.12.0",
    "yup": "^1.6.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.8.0",
    "@eslint/create-config": "1.4.0",
    "@eslint/js": "^9.21.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.20.0",
    "esbuild": "^0.25.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.22.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.6",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.26.1",
    "web-ext": "^8.4.0"
  }
}
