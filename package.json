{
  "name": "letterboxd-backdrop",
  "version": "1.3",
  "scripts": {
    "build:webpack": "webpack && web-ext build --source-dir=dist --overwrite-dest",
    "build:tailwind": "pnpx tailwindcss build src/css/tail-wind.css -o src/css/tailwind.css",
    "build:all": "pnpx tailwindcss build src/css/tail-wind.css -o src/css/tailwind.css && webpack && web-ext build --source-dir=dist --overwrite-dest",
    "lint": "eslint src/**/*.ts*",
    "test:ci": "pnpx jest --ci --testResultsProcessor='jest-junit'"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__test__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "@types/webextension-polyfill": "^0.10.0",
    "axios": "^1.6.8",
    "copy-webpack-plugin": "^12.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.34.1",
    "html-webpack-plugin": "^5.5.1",
    "jest-junit": "^16.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.2",
    "web-ext": "^7.6.2",
    "webextension-polyfill": "^0.11.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.0.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.9",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/webpack": "^5.28.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
