{
  "name": "letterboxd-backdrop",
  "version": "1.5",
  "scripts": {
    "build:esbuild": "node esbuild.config.mjs",
    "build:tailwind": "tailwindcss build -i src/css/styles.css -o src/css/tailwind.css",
    "build:all": "tailwindcss build -i src/css/styles.css -o src/css/tailwind.css && node esbuild.config.mjs && web-ext build --source-dir=dist --overwrite-dest",
    "lint": "eslint src/**/*.ts*",
    "test:ci": "pnpm exec jest --ci --testResultsProcessor=jest-junit"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__test__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "axios": "^1.13.2",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "webextension-polyfill": "^0.12.0",
    "yup": "^1.7.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.9.0",
    "@eslint/create-config": "1.11.0",
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.47.0",
    "esbuild": "^0.27.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.5",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.47.0",
    "web-ext": "^9.1.0"
  }
}
